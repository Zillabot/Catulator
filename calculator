function add(num1, num2) {
  var answer = num1 + num2;
  return answer;
}

function sub(num1, num2) {
  var answer = Math.abs(num1 - num2);
  return answer;
}

function mult(num1, num2) {
  var answer = num1*num2;
  return answer;
}

function division(num1, num2) {
  if (num2 !=0){
    var answer = num1/num2;
    return answer;
  } else {
   console.log("The second number cannot be zero, you scrub");
  }
}

module.exports = {
  add: add,
  sub: sub,
  mult: mult,
  division: division
}
